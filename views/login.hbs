<div class="forgradient" style="background: linear-gradient(90deg, rgba(150,100,250,1) 24%, rgba(72,70,232,1) 79%)">
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body px-5 text-center">

              <nav class="navbar fixed-top navbar-inverse bg-primary d-flex  justify-content-center">
                
                <img style="width: 10vw;" src="/images/DB_of_Games_Logo-removebg-preview.png" alt="" srcset="">
                <h6 class=" fw-bold text-uppercase" style="color: white;"> - Get Details About Your favourite Gamers</h6>
                
                <div class="mr-auto"><a class="btn btn-outline-light btn-sm mx-5 mb-3 bg-primary" target="_blank" href="/admin">Admin Login</a></div>
              </nav>
              


              <div class="mb-md-2 mt-md-4 pb-3">
                <h2 class="fw-bold mb-2 text-uppercase">User Login</h2>
                <p class="text-white-50 mb-5">Please enter your login and password!</p>
                <form action="/login" method="post">
                  <div class="form-outline form-white mb-4">
                    <input type="email" id="typeEmailX" required name="ClientEmail" class="form-control form-control-lg" />
                    <label class="form-label" for="typeEmailX">Email</label>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <input type="password" required id="typePasswordX" name="ClientPassword"
                      class="form-control form-control-lg" />
                    <label class="form-label" for="typePasswordX">Password</label>
                  </div>
                  {{#if UserloginErr}}
                  <p class="error text-danger">Invalid Username or Password</p>
                  {{/if}}
                  <p class="small pb-lg-2"><a class="text-white-50" href="/forgotpass">Forgot password?</a></p>
                  
                  <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                  
                </form>
                
                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                  <a href="https://www.facebook.com"  target="_blank" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                  <a href="https://twitter.com" target="_blank" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                  <a href="https://www.google.com" target="_blank" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                </div>
                
              </div>

              <div>
                {{!-- w --}}
                <p class="mb-0">Don't have an account? <a href="/signup" class="text-white-50 fw-bold">Sign Up</a>
                </p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
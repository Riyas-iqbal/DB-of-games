
<div class="pt-5" style="background: linear-gradient(90deg, rgb(216, 213, 222) 24%, rgb(246, 246, 253) 79%); height: 100vh ;">
    <h2 class="d-flex justify-content-center ">Edit Gaming Profile</h2>
    <section>
        <div class="container p-5 mt-2" style="width: 60%;">
            <form action="/admin/edit-profile/{{profile._id}}" method="post" onsubmit="alert('Updated Profile Successfully');">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-2">
                    <div class="col-md-10" >
                        <div class="form-outline" >
                            <input type="text" required value="{{profile.pr_gname}}" name="pr_gname" style="background: white;" id="form6Example1" class="form-control" />
                            <label class="form-label"  for="form6Example1">Gaming Name</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-outline mb-4" >
                            <input type="number" required value="{{profile.pr_age}}" name="pr_age" style="background: white;" id="form6Example6" class="form-control" />
                            <label class="form-label" for="form6Example6">Age</label>
                        </div>
                    </div>
                </div>


                <!-- Text input -->
                <div class="form-outline mb-4" >
                    <input type="text"  required value="{{profile.pr_game}}" name="pr_game" style="background: white;" id="form6Example4" class="form-control" />
                    <label class="form-label" for="form6Example4">Preferred Game</label>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" required value="{{profile.pr_email}}" name="pr_email" style="background: white;" id="form6Example5" class="form-control" />
                    <label class="form-label"  for="form6Example5">Email</label>
                </div>

                <!-- selection input -->
                {{!-- <div class=""></div> --}}
                <select class="form-select mb-4" required value="{{profile.pr_level}}" name="pr_level" aria-label="Default select example">
                    <option  value="{{profile.pr_level}}">{{profile.pr_level}}</option>
                    <option value="Professional">Professional</option>
                    <option value="Intermediate">Intermediate</option>
                    <option value="Beginner">Beginner</option>
                </select>
                {{!--</div>/ --}}
        <!-- Message input -->
        <div class="form-outline mb-4 " >
            <input type="text" class="form-control" value="{{profile.pr_info}}" name="pr_info" style="background: white;" id="form6Example7" rows="6" />
            <label class="form-label" for="form6Example7">Additional information (optional)</label>
        </div>

        <!-- Checkbox -->
        {{!-- <div class="form-check d-flex justify-content-center mb-4">
            <input class="form-check-input me-2" type="checkbox" value="" id="form6Example8" checked />
            <label class="form-check-label" for="form6Example8"> Create an account? </label>
        </div> --}}

        <!-- Submit button -->
        <button type="submit" style="background: rgb(26, 167, 249); color: rgb(67, 60, 60);" class="btn btn-block mb-4">Update Profile</button>
        </form>
</div>
</section>

</div>